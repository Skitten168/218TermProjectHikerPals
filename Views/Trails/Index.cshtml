@model IEnumerable<HikerPals.Models.Trail>

@{
    ViewData["Title"] = "Index";
}

<h1>Trails</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div style="width:50%">
<table class="table table-striped table-responsive table-hover text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
